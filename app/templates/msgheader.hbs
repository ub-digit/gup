{{#if showMsgHeader}}
  {{#if isError}}
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="alert alert-danger alert-dismissible">
          <button type="button" {{action 'hideMsgHeader'}} class="close" aria-label="Close"><i class="fa fa-times-circle"></i></button>
          {{msg}}
        </div>
      </div>
    </div>
    {{else}}
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="alert alert-success alert-dismissible">
          <button type="button" {{action 'hideMsgHeader'}} class="close" aria-label="Close"><i class="fa fa-times-circle"></i></button>
          {{msg}}
        </div>
      </div>
    </div>
  {{/if}}
{{/if}}
