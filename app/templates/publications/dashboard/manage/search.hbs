<div class="gup-search">

  <div class="row">
    <div class="col-xs-12">
        <div class="row">
          <h3 class="text-center">{{t 'publications.dashboard.manage.search.searchPublications'}}</h3>
          <div class="col-xs-8 col-xs-offset-2 bottom-spacing-20 gup-search-form">
            <form {{action "findPublications" on="submit"}}>
              <div class="input-group">
                {{input autofocus="autofocus" class="form-control" value=term placeholder=(t 'publications.dashboard.manage.search.searchBy') }}
                <span class="input-group-btn">
                  <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i></button>
                </span>
              </div>
              <div class="gup-search-form-clear-search-btn {{isSearchInputEmpty}}">
                <i {{action 'resetForm'}}class="fa fa-close"></i>
              </div>
            </form>
           </div>
        </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      {{#if model.length}}
      <div class="row number-of-results">
        <div class="col-xs-12 text-center">
          <strong>{{t 'publications.dashboard.manage.search.numberOfHits'}}: {{model.meta.query.total}}</strong>
        </div>
      </div>
      <ul class="list-unstyled dashboard-list">
        {{#each model as |item|}}
        <li>
          {{publication-list-row item=item link='publications.dashboard.manage.show'}}
        </li>
        {{/each}}
      </ul>
      <div class="row">
        <div class="col-xs-12">
          {{pagination-pager pagination=model.meta.pagination}}
        </div>
      </div>            
      {{else}}
        {{#if displayNoResult}}
          {{no-result displaytext=(t 'publications.dashboard.manage.search.noPublicationsFound')}}
        {{/if}}
        
      {{/if}}

      <div class="col-xs-6">
        <span class="gup-error">{{application.publication_id_error}}</span>
      </div>
    </div>
  </div>
</div>