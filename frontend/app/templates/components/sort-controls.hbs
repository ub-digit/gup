{{#if isShowing}}
<div class="sort-control {{isFirst}} {{isLast}}">
  <div class="sort-control-up">
    <a href="javascript:void()" {{action didMoveUp}}><i class="fa fa-chevron-up"></i></a>
  </div>
  <div class="sort-control-down">
    <a href="javascript:void()" {{action didMoveDown}}><i class="fa fa-chevron-down"></i></a>
  </div>
</div>
{{/if}}
