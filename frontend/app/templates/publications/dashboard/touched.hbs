<div class="row">
  <div class="col-xs-12">
    {{#if model.length}}
      <div class="row number-of-results bottom-spacing-20">
        <div class="col-xs-12 text-center">
          <strong>{{t 'publications.dashboard.touched.numberOfHits'}}: {{model.meta.query.total}}</strong>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
            <form class="form-inline">
              <label>{{t 'publications.dashboard.manage.published.sortByPreLabel'}}</label>
               {{#x-select value=sort_by class="form-control"}}
                  {{#if prompt}}{{#x-option}}{{prompt}}{{/x-option}}{{/if}}
                    {{#each sortSelectValues as |selectValue|}}
                      {{#x-option value=selectValue.value}}{{selectValue.label}}{{/x-option}}
                    {{/each}}
                {{/x-select}}
              </form>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <ul class="list-unstyled dashboard-list">
            {{#each model as |item|}}
              <li>
                {{publication-list-row item=item link='publications.dashboard.manage.show'}}
              </li>
            {{/each}}
          </ul>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          {{pagination-pager pagination=model.meta.pagination}}
        </div>
      </div>  
    {{else}}
      {{no-result icon="fa-file-o" displaytext=(t 'publications.dashboard.touched.youHaveNoRegisteredOrEditedPublications')}}
    {{/if}}
  </div>
</div>
