{{#link-to 'admin.departments.index' class="btn btn-link"}}<i class="fa fa-chevron-left"></i> {{t 'admin.departments.new.btnBack'}}{{/link-to}}
<h1>{{t 'admin.departments.new.header'}}</h1>

<div class="row bottom-spacing-20">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="row bottom-spacing-20">
      <div class="col-xs-12">
	<span class="form-group {{if errors.name_sv 'has-error'}}">
	  <label class="control-label">								
      {{t 'admin.departments.new.labels.nameSv'}} <span style="color:red">*</span>
	  </label>
	    {{#if errors.name_sv}}
	      <p>{{errors.name_sv}}</p>
	    {{/if}} 
	  {{input type="text" class="form-control" value=model.name_sv}}
	</span>
      </div>
    </div>
    <div class="row bottom-spacing-20">
      <div class="col-xs-12">
	<span class="form-group {{if errors.name_en 'has-error'}}">
	  <label class="control-label">								
      {{t 'admin.departments.new.labels.nameEn'}} <span style="color:red">*</span>
	  </label>
	    {{#if errors.name_en}}
	      <p>{{errors.name_en}}</p>
	    {{/if}}
	  {{input type="text" class="form-control" value=model.name_en}}
	</span>
      </div>
    </div>
    <div class="row bottom-spacing-20">
      <div class="col-xs-3">
	<span class="form-group {{if errors.start_year 'has-error'}}">
	  <label class="control-label">								
      {{t 'admin.departments.new.labels.startYear' }} <span style="color:red">*</span>
	  </label>
	    {{#if errors.start_year}}
	      <p>{{errors.start_year}}</p>
	    {{/if}} 
	  {{input type="text" class="form-control" value=model.start_year }}
	</span>
      </div>
      <div class="col-xs-3">
	<span class="form-group {{if errors.end_year 'has-error'}}">
	  <label class="control-label">								
      {{t 'admin.departments.new.labels.endYear' }}
	  </label>
	    {{#if errors.end_year}}
       <p> {{errors.end_year}}</p>
	    {{/if}} 
	  {{input type="text" class="form-control" value=model.end_year }}
	</span>
      </div>
    </div>
     <div class="row bottom-spacing-20">
       <div class="col-xs-12">
       <label class="control-label">
        {{t 'admin.departments.new.labels.faculty'}}
       </label>
        {{#x-select value=model.faculty_id class="form-control"}}
          {{#x-option}}{{t 'admin.departments.new.noFaculty'}}{{/x-option}}
          {{#each adminController.faculties as |selectValue|}}
            {{#x-option value=selectValue.id}}{{selectValue.name}}{{/x-option}}
          {{/each}}
        {{/x-select}}
      </div>
    </div>

    <div class="btn-toolbar">
      <button type="submit"  {{action 'saveDepartment' model}} class="btn btn-success">
        {{t 'admin.departments.new.save'}}
      </button>
    </div>
  </div>
</div>
